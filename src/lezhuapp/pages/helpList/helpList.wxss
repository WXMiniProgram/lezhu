.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.textStyle {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.textContainer {
  margin-top: 200px;
}

.help-list{
  width: 100%;
  height: 8rem;
  background-image: url('../../images/bg01.jpg');
  background-repeat: no-repeat;
  background-size: cover;
  position:relative;
}

.headIcon{
  width: 3rem;
  height: 3rem; 

}

.help-list-top{
  display: inline-block;
  width: 100%;
}
.help-list-top-left{
    display: inline-block;
}
.help-list-top-right{
    background-color: #FEA80B;
    text-align: center;
    vertical-align: middle;
    border-radius:2rem 0 0 2rem;
    width:7rem;
    height:2rem;
    float: right;
    margin-top: 0.5rem;
    line-height:2rem;
    font-size: 0.8rem;
}

.helplist-top-type{
line-height: 40px;
background-color: #ffffff;
border-top:1px solid #999;
border-bottom:1px solid #999;
}

.helplist-top-type-picker{
margin-left:5%;
}

.helplist-container{
  background-color: #E8E8E8;
}

.help-list-bottom{
  width: 100%;
  color: #ffffff;
  background-color:black;
  opacity:0.5;
  position:absolute;
  bottom: 0;
  vertical-align: middle;
  height: 2.5rem;
  line-height: 2.5rem;

}

.help-list-bottom-left{
margin-left: 5%;
display: inline-block;
width: 70%;
}

.help-list-bottom-right{
float: right;
margin-right: 5%;
/*display: inline-block;*/
}