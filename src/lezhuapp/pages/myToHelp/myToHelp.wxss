page{
    background-color:#D6D6D6;
}

.container{
    background-color:#D6D6D6;
    height:100%;
}

.fl{
    float:left;
}

.fr{
    float:right;
}

.item{
    width:100%;
    height: 84px;
    border-bottom: 1px solid #d4d4d4;
    border-top: 1px solid #d4d4d4;
    background: #fff;
}

.description{
    width:92%;
    border-bottom: 0px;
    background: #fff;
    padding-top: 10px;
    padding-bottom: 10px;
    padding-left: 4%;
    padding-right: 4%;
}

.desDetail{
    padding-top: 8px;
    font-size: 12px;
    color:#ACACAA
}


.itemLeft{
    width: 44%;
    margin-top: 10px;
    height: 60px;
}

.personImg{
    width:60px;
    height:60px;
    margin-left: 3px;
    border-radius: 50%;
}

.personName{
    color:black;
    margin-top: 21px;
    text-indent:8px;
}

.itemRight{
    text-align: right;
    border: 0;
    font-size: 16px;
    color: #e8ae26;
    margin-top: 32px;
    margin-right: 5%;
    width: 50%;
}

.upSpace{
    height: 18px;
    font-size: 12px;
    color: #666;
}

.itemHelp{
    width:100%;
    border-bottom: 0px solid #d4d4d4;
    border-top: 1px solid #d4d4d4;
    background: #fff;
}

.itemHelpLeft{
    width: 30%;
    margin-top: 14px;
    margin-bottom: 14px;
}

.helpName{
    color:black;
    text-indent: 14px;
}

.itemHelpRight{
    text-align: left;
    border: 0;
    font-size: 16px;
    color: #e8ae26;
    margin-top: 14px;
    margin-bottom: 14px;
    margin-right: 1%;
    width: 65%;
}

.helpDetail{
    color:black;
}

.statusArea{
    width:92%;
    border-top: 1px solid #d4d4d4;
    background: #fff;
    padding-top: 10px;
    padding-bottom: 10px;
    padding-left: 4%;
    padding-right: 4%;
}

.itemStatus{
    width:100%;
    background: #fff;

}

.statusTitle{
    margin-top: 8px;
}

.statusDetail{
    padding-top: 8px;
    padding-bottom: 8px;
    font-size: 14px;
    color:#ACACAA
}
